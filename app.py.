import sys
import os
from flask import Flask, request, jsonify
from flask_cors import CORS

# 1. Truco para que Python encuentre tu carpeta 'engines'
sys.path.append(os.path.join(os.path.dirname(__file__), 'engines'))

# 2. Importamos los motores que acabas de crear
import footballEngine
import nbaEngine
import baseballEngine

app = Flask(__name__)
CORS(app)

# --- RUTA PRINCIPAL (SELECTOR DE DEPORTE) ---
@app.route('/analizar_manual', methods=['POST'])
def analizar_manual():
    try:
        data = request.json
        # Recibimos los valores (ELO o Rating)
        home_val = data.get('elo_home') 
        away_val = data.get('elo_away')
        sport = data.get('sport', 'soccer') # Por defecto fútbol

        if not home_val or not away_val:
            return jsonify({"error": "Faltan valores numéricos"}), 400

        result = {}

        # 3. EL SEMÁFORO: Decidimos qué motor usar
        if sport == 'soccer':
            result = footballEngine.calculate_soccer_math(home_val, away_val)
        
        elif sport == 'nba':
            result = nbaEngine.calculate_nba_math(home_val, away_val)
            
        elif sport == 'mlb':
            result = baseballEngine.calculate_mlb_math(home_val, away_val)
            
        else:
            return jsonify({"error": "Deporte no reconocido"}), 400

        # 4. Enviamos la respuesta limpia al Frontend
        return jsonify({
            "status": "success",
            "math": result
        })

    except Exception as e:
        return jsonify({"error": str(e)}), 500

# Rutas de soporte para que la web no de error al iniciar
@app.route('/sincronizar-cache', methods=['POST'])
def sync(): return jsonify({"status": "ok"})

@app.route('/', methods=['GET'])
def home(): return "CAPITAL SHIELD MODULAR ENGINE ONLINE", 200

if __name__ == '__main__':
    port = int(os.environ.get('PORT', 10000))
    app.run(host='0.0.0.0', port=port)
